kind: Pod
apiVersion: v1
metadata:
  name: haproxy
  namespace: kube-system
  labels:
    component: haproxy
    tier: control-plane
spec:
  containers:
  - name: "{{ image.haproxy.name }}"
    image: "{{ image.haproxy.repos }}{{ image.haproxy.name }}:{{ image.haproxy.tag }}"
    resources:
      requests:
        cpu: 100m
    volumeMounts:
    - name: cfg
      readOnly: true
      mountPath: "/usr/local/etc/haproxy/haproxy.cfg"
  hostNetwork: true
  volumes:
  - name: cfg
    hostPath:
      path: "/etc/haproxy/haproxy.cfg"
